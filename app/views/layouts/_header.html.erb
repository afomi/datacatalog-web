<div id="header">
  <h1><a href="/">National Data Catalog</a></h1>
  <div id="utility">
    <ul>
    <% if current_user -%>
      <li id="utilityRegister"><%= link_to "Edit Profile", edit_profile_path %></li>
      <li id="utilitySignup"><%= link_to "Sign Out", signout_path %></li>
    <% else -%>
      <li id="utilityRegister"><%= link_to "Sign Up", signup_path %></li>
      <li id="utilitySignup"><%= link_to "Sign In", signin_path %></li>
    <% end -%>
    </ul> 
    <form id="searchForm" action="." method="get">
      <input id="id_skills" type="text" name="skills"/>
      <button class="searchBtn" type="submit">
        <span>Search the Catalog</span>
      </button>
    </form>
    <div class="clear"></div>
    <a class="advancedSearch_link" href="#">Advanced Search</a>
  </div>

  <div id="nav">
    <ul>
      <li id="nav_dashboard"><a class="active" href="/">Dashboard</a></li>
      <li id="nav_browse"><a href="/browse">Browse Data</a></li>
      <li id="nav_add"><a href="#">Add Data</a></li>
      <li id="nav_suggest"><a href="/suggest">Suggest Data</a></li>
    </ul>
  </div>
</div>