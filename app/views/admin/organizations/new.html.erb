<% content_for :title do %>
  New Organization
<% end %>

<% content_for :body_class do %>admin<% end %>
  
<% content_for :tabs do %>
  <%= render 'admin/tabs' %>
<% end %>

<div id="ltColumn">

<% form_for :organization, @organization, :url => admin_organizations_path do |f| -%>
  <%= show_flash_message %>
  <ul>
    <li>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :acronym %>
      <%= f.text_field :acronym %>
    </li>
    <li>
      <%= f.label :slug %>
      <%= f.text_field :slug %>
      <p class="tip">Will be auto-generated if left blank.</p>
    </li>
    <li>
      <%= f.label :url, "Website" %>
      <%= f.text_field :url %>
    </li>
    <li>
      <%= f.label :org_type, "Type" %>
      <%= f.select :org_type, ['Governmental', 'Non-governmental'] %>
    </li>
    <li>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </li>

    <li>
      <button class="submit" id="user_submit" type="submit" value="Update" name="commit">
        <span>Submit</span>
      </button>
    </li>
  </ul>

<% end -%>
</div>

<div id="rtColumnWrapper">
  <div id="rtColumn" class="withBg">
    <div id="dashboardNav" class="module">
      <h3>Stats</h3>
      <div class="clear"></div>
    </div>
    <a href="<%= new_admin_organization_path %>"><img src="/images/btn_addAgency.png" /></a>
  </div>
</div> 
<div class="clear"></div>