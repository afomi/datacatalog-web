<% content_for :title do %>
  Scoring Dashboard
<% end %>

<% content_for :body_class do %>admin<% end %>
  <div id="missing_by_field">
  <h3>% Missing by Field</h3>
  <table class="scoringTable">
    <tr id="titles">
      <th class="left">property</th>
      <th class="right sort">% missing</th>
    </tr>
    <tr class="even">
      <td>source_group_id</td>
      <td>100</td>
    </tr>
    <tr class="odd">
      <td>raw</td>
      <td>82</td>
    </tr>
    <tr class="even">
      <td>custom</td>
      <td>62</td>
    </tr>
    <tr class="odd">
      <td>license_url</td>
      <td>34</td>
    </tr>
    <tr class="even">
      <td>license</td>
      <td>34</td>
    </tr>
  </table>
  <p>
    Filter by:
    <%= select 'Importer', :importer,
      ["All Importers", "Utah", "Data.gov", "Michigan"] %>
    <%= submit_tag 'Filter Table' %>
  </p>
</div>

<br/>
<hr/>
<br/>

<div id="scores_by_source">
  <h3>Scores by Source</h3>
  <table class="scoringTable">
    <tr id="titles">
      <th class="left sort">source name</th>
      <th class="mid sort">score</th>
      <th class="right sort">last updated</th>
    </tr>
    <tr class="even">
      <td>Employment cost trends</td>
      <td>4</td>
      <td>11/09/10</td>
    </tr>
    <tr class="odd">
      <td>Worldwide M5 Earthquakes Past 7 Days </td>
      <td>7</td>
      <td>07/05/10</td>
    </tr>
    <tr class="even">
      <td>Tax Year 2001 SOI Exempt Organization Study</td>
      <td>17</td>
      <td>10/13/10</td>
    </tr>
  </table>
  <p>
    Filter by:
    <%= text_field_tag :keyword, "keyword" %>
    and
    <%= select 'Importer', :importer,
      ["All Importers", "Utah", "Data.gov", "Michigan"] %>
    <%= submit_tag 'Filter Table' %>
  </p>
</div>

<br/>
<hr/>
<br/>

