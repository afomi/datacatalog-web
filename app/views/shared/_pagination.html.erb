<span class="dataResults"><%= pluralize(docs.length, 'result') -%></span>
<ul class="pagination">
  
  <% if @pages.length > 1 -%>
  <li>
    <% if @page > 1 -%>
      <%= link_to "&laquo; Previous", "?page=#{@page - 1}" -%>
    <% end -%>
    <% @pages.each do |p| -%>
      <% if p.nil? -%>
        <span class="ellipsis">&#8230;</span>
      <% elsif @page == p[:number] -%>
        <%= p[:number] -%>
      <% else -%>
        <%= link_to p[:number], p[:path] -%>
      <% end -%>
    <% end -%>
    <% if @page < docs.page_count -%>
      <%= link_to "Next &raquo;", "?page=#{@page + 1}" -%>
    <% end -%>
    </li>
  <% end -%>
  
</ul>
