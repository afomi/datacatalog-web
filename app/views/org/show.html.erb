<% content_for :body_class do %>detail organization<% end %>

<% content_for :title do %>
  Results for “<%= @org.name %>”
<% end %>

<div id="column_fullWidth">
  <%= show_flash_message %>  

  <p><%= @org.description %></p>
  <div class="module">
    <div id="dataDetails">
      <div id="metaDetails">
        <dl>
          <%= detail_field @org, :attribute => :org_type, :label => "Type",
                           :value => @org.org_type, :titleize => true %>

          <%= detail_field @org, :attribute => :level, :label => "Level",
                           :value => @org.level, :titleize => true %>
          
          <%= detail_field @org, :attribute => :acronym, :label => "Acronym",
                           :value => @org.acronym %>
          
          <%= detail_field @org, :attribute => :names, :collection => true, :label => "Other Names",
                           :value => @org.names %>
                           
          <%= detail_field @org, :attribute => :url, :label => "URL",
                           :value => truncate(@org.url, :length => 35), :url => @org.url %>

          <%= detail_field @org, :attribute => :source_count, :label => "# of Sources", :value => @org.source_count %>
        </dl>        
      </div><!-- metaDetails -->

    <div class="clear"></div> 

    </div><!-- dataDetails -->
  </div><!-- module -->
<%= render :partial => 'browse/sources' %>
</div>
